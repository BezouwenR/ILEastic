{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile current file",
            "command": "ssh -t dksrv133 'cd /prj/ILEastic/;gmake current SRC=${fileBasenameNoExtension}'",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            // Use the standard less compilation problem matcher.
            "problemMatcher": {
                "owner": "c",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    //"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    // src/ileastic.c, 241.2: CZM0045(30) Undeclared identifier a.
                    
                    "regexp": "^(.*), (\\d+)\\.(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    // "severity": 4,
                    "message": 4
                }
            }
        },
        {
            "label": "Compile Service program ILEastic",
            "command": "ssh dksrv133 'cd /prj/ILEastic/;gmake all'",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Compile all example files",
            "command": "ssh -t dksrv133 'cd /prj/ILEastic/examples/;gmake '",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            
        },
        {
            "label": "Compile current example file",
            "command": "ssh -t dksrv133 'cd /prj/ILEastic/examples/;gmake ${fileBasename} '",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            // Use the standard less compilation problem matcher.
            "problemMatcher": {
                "owner": "c",
                "fileLocation": ["relative", "${workspaceRoot}/examples"],
                "pattern": {
                    // FileName: *RNF7030 30    399 000022  The name or indicator A is not defined.
                    "regexp": "^(.*):.*\\s{3,6}(\\d+)\\s{1}(\\d+)\\s{1}\\s+(.*)$",
                    "file": 1,
                    "line": 3,
                    //"column": 3,
                    // "severity": 4,
                    "message": 4
                }
            }
        }
    ]
}